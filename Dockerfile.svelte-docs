# Use a Node.js base image
FROM node:lts-alpine

# Install the svelte-docs MCP package globally
RUN npm install -g @mcpflow.io/mcp-svelte-docs

# Expose the port that svelte-docs might use (if it listens on a port)
EXPOSE 3000

# Define the command to run the svelte-docs server
CMD ["node", "/usr/local/lib/node_modules/@mcpflow.io/mcp-svelte-docs/dist/index.js"]